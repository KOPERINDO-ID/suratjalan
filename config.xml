<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.epointsj" version="4.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Surat Jalan</name>
    <description>
        Sales Force Management System
    </description>
    <author email="vertice15@gmail.com" href="https://vertice.id">
        Vertice Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">    
        <plugin name="cordova-plugin-camera" spec="./plugins/cordova-plugin-camera">
            <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
        </plugin>
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="2500" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false" />
        <preference name="SplashScreenBackgroundColor" value="white" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#0000" />
        <preference name="StatusBarStyle" value="lightcontent" />        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="icon.png"/>
        <preference name="AndroidPersistentFileLocation" value="Internal" />
        <preference name="iosExtraFilesystems" value="library,library-nosync,documents,documents-nosync,cache,bundle,root" />
        <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,assets,root" />
        <allow-intent href="market:*" />        
        <preference name="Orientation" value="portrait" />
        <icon density="hdpi" src="icon.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>    
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <engine name="browser" spec="^6.0.0" />
    <engine name="android" spec="^11.0.0" />
</widget>
